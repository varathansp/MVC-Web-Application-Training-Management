@model IEnumerable<PleaseStayWithUs.Data_Access_Layer.Course>

@{
    ViewBag.Title = "upcomingCourses";
    Layout = "~/Views/Shared/_EmployeeTemplate.cshtml";
}

<h2 align="center">upcomingCourses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DomainName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
