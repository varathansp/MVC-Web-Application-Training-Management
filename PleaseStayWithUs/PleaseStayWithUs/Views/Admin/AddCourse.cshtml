
@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Views/Shared/_AdminTemplate.cshtml";

    

    List<SelectListItem> list1 = new List<SelectListItem>();
    list1.Add(new SelectListItem { });
    list1.Add(new SelectListItem { Text = "Forenoon", Value = "Forenoon" });
    list1.Add(new SelectListItem { Text = "Afternoon", Value = "Afternoon" });
    ViewData["Session"] = list1;

}





<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Course</title>
    <style>
        table {
            color: #ffffff;
            border-collapse: collapse;
        }

        td {
            color: #ffffff;
            padding-top: .5em;
            padding-bottom: .5em;
        }

        body {
            color: #ffffff;
            font-weight: 800;
        }
    </style>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <style>
        .signout {
            position: absolute;
            top: 0;
            right: 0;
        }
    </style>
    <script>
        jQuery.validator.addMethod("alphanumeric", function (value) { return /^[C]{1}[R]{1}\d{3}]*$/.test(value); });

        jQuery.validator.addMethod("leapdate", function (value) { return /^(?:(?:31(\/|-|\.)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/|-|\.)(?:0?[1,3-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/|-|\.)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$/.test(value); }); 


      






        $(document).ready(function () {
            $("#Admin").validate({
                rules: {
                 


                    txtCourseName:
                       {
                           required: true,


                       },
                    domain:
                        {
                            required:true,

                        },

                    txtStartDate:
                        {

                            required: true,
                            leapdate:true

                        },
                    txtEndDate:
                        {
                            required: true,
                            leapdate: true,

                        },
                    Session:
                        {
                            required: true,

                        },
                    txTrainerID:
                        {
                            required:true,
                        },

                },
                messages: {
                

                  


                    txtCourseName:
                       {
                           required: "Please enter  course name",


                       },
                    domain:
                        {
                            required: "Please select one",

                        },

                    txtStartDate:
                        {

                            required: "Please enter start date",
                            leapdate:"Invalid date "


                        },
                    txtEndDate:
                        {
                            required: "Please enter  end date",
                            leapdate:"Invalid date",
                            greaterThan:"please enter forecoming date"
                        },
                    Session:
                        {
                            required: "Please select one",

                        },
                    txTrainerID:
                        {
                            required: "Please select your trainer ID",
                        },

               },

            });
        });


    </script>
</head>
<body>


    <h2 align="center">Add Course</h2>

    @using (Html.BeginForm("AddCourse", "Admin", FormMethod.Post, new { @id = "Admin" }))
    {


        <table style="margin-left:500px">

           
            <tr>
                <td>Course Name&nbsp;&nbsp;</td>
                <td>@Html.TextBox("txtCourseName", null, new { @class = "text-primary"})</td>
            </tr>
            <tr>
                <td>Domain Name&nbsp;&nbsp;</td>
                <td>
                    @Html.DropDownList("domain", ViewData["domainDropDown"] as List<SelectListItem>, new { style = "width:173px;", @class = "text-primary" }

)
                </td>

            </tr>
            <tr>
                <td>Start Date&nbsp;&nbsp;</td>
                <td>@Html.TextBox("txtStartDate",null, new { @class = "text-primary" , @placeholder = "dd/mm/yyyy" })</td>
            </tr>
            <tr>
                <td>End Date&nbsp;&nbsp;</td>
                <td>@Html.TextBox("txtEndDate",null, new { @class = "text-primary", @placeholder = "dd/mm/yyyy" })</td>
            </tr>
            <tr>
                <td>Session&nbsp;&nbsp;</td>
                <td>
                    @Html.DropDownList("Session", ViewData["Session"] as List<SelectListItem>, new { style = "width:173px;", @class = "text-primary" }

)
                </td>
            </tr>
            <tr>
                <td>Trainer ID&nbsp;&nbsp;</td>
                <td>
                    @Html.DropDownList("txTrainerID", ViewData["TrainerDDL"] as List<SelectListItem>, new { style = "width:173px;", @class = "text-primary" }

)
                </td>


            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="ADD" name="btn" class="btn btn-primary my-btn" /></td>
                <td ><p style="color:red">@ViewData["alertCourse"]</p><p style="color:lawngreen"> @ViewData["alertCourse1"]</p> <p> @ViewData["ID"]</p></td>
            </tr>
        </table>
    }
    <div>
    </div>
</body>
</html>
